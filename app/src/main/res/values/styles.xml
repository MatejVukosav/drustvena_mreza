<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_accent</item>
    </style>


    <style name="UserWallAboutTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppButtonsStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/button_shape</item>
   <!--     <item name="android:background">@color/primary_dark</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>

        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>


    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- LOGIN  -->
    <style name="login_buttons_style">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_centerHorizontal">true</item>

        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="LoginInput">
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <string name="login_forgot_password"> <u>Forgot your password?</u></string>

    <!-- SEARCH -->
    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar-->
        <item name="searchBackground">@android:color/white</item>
        <!-- Change voice icon-->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search</item>
        <!-- Change clear text icon-->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close</item>
        <!-- Change up icon-->
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back</item>
        <!-- Change background for the suggestions list view-->
        <item name="searchSuggestionBackground">@android:color/white</item>
        <!-- Change text color for edit text. This will also be the color of the cursor-->
        <item name="android:textColor">@android:color/black</item>
        <!-- Change hint text color for edit text-->
        <item name="android:textColorHint">@android:color/black</item>
        <!-- Hint for edit text-->
        <item name="android:hint">@string/search_hint</item>
    </style>

</resources>
