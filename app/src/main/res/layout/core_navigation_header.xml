<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/navigation_header_color"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_spacing"
        android:layout_marginLeft="@dimen/default_spacing"
        android:layout_marginBottom="@dimen/default_spacing"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            android:id="@+id/core_navigation_header_profile_picture"
            app:civ_border_color="@color/blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_spacing"
            android:layout_marginStart="@dimen/default_spacing"
            android:padding="@dimen/default_spacing"
            android:id="@+id/core_navigation_header_username"
            android:text="User name"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            tools:text="User_name" />
    </LinearLayout>

    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_spacing" />

</LinearLayout>