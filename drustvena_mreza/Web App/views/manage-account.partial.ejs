    <style>
        body {
            margin: 20px auto;
        }

        .text_orange {
            color: darkorange;
            font-family: "Times New Roman";
            font-size: 1.5em;
        }
        .text_other {
            color: green;
            font-family: "Times New Roman";
            font-size: 1.2em;
        }

        .text_center {
            text-align: center;
        }
        
   
        
    </style>
 

<div class="container">
    
  <form action="/manage-account" method="post" id="loginForm" class="form-inline">

        <div class="col-md-4 col-sm-6">
            <div class="well">                    
      
  
                
                    <div class="control-group">             
                        <label class = "text_other" class="control-label col-sm-2" for="email">E-MAIL</label>
                            <div class="controls">
                              <input type="e-mail" id="e-mail" name="e-mail" placeholder="" class="form-control" <% if(locals.user) { %>value="<%= user.email %>"<% } %>/>
                              </div>
                    </div>
               
            </div> 
                
            <div class="well">    
            
                <div class="control-group">
                               
                        <label class="control-label text_other" for="password"> YOUR PASSWORD</label>
                        <div class="controls" >
                            <input type="password" id="password" name="password" placeholder="" class="form-control" data-toggle="popover" data-trigger = "manual" <% if(locals.user) { %>value="<%= user.password_hash %>"<% } %> />
                            
                        </div>
                </div>
            
                        
          
                <div class="control-group">     
                        <div class="controls" >
                            <label class="control-label text_other" for="password"> ENTER A NEW PASSWORD</label>
                            <input type="password" id="password" name="password" placeholder="" class="form-control" data-toggle="popover" data-trigger = "manual" />

                            <p class="help-block">Password should be at least 8 characters !!</p>
                        </div>
                </div>
                
                
                <div class="control-group">
                        <div class="controls">
                        <label class="control-label text_other" for="retypePassword"> PASSWORD - CONFIRM </label>
                        
                            <input type="retypePassword" id="retypePassword" placeholder class="form-control" data-toggle="popover" data-trigger = "manual">
                            <p class="help-block alert-danger" id="passwordMatch" style="display:none">Passwords do not match!!</p>
                        </div>
                </div>
                
        
        </div>
            
        
        <div class="col-md-4">
      
          <div class="form-group">
              <input type="submit" class ="btn btn-info" role="button" value="SAVE CHANGES" />
              
          </div>      
        </div>    
            
            
      </div>
      

      
    </form>
</div>